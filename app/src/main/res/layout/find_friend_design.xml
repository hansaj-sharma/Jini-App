<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:elevation="20dp"
    android:layout_marginTop="15dp"
    android:layout_marginRight="25dp"
    android:layout_marginLeft="25dp"

    >

    <RelativeLayout
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E5050505"
        >
        <ImageView
            android:id="@+id/image_notification"
            android:layout_width="200dp"
            android:layout_height="200dp"

            android:scaleType="centerCrop"
            android:layout_centerHorizontal="true"
            android:src="@drawable/profile_image"
            >
        </ImageView>

            <TextView

                android:id="@+id/username_notification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image_notification"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:textColor="@color/ic_launcher_background"
                android:textSize="20dp"
                android:text="user name"
                android:textStyle="bold"
                android:gravity="center_horizontal">

            </TextView>

        <Button
            android:id="@+id/request_accept_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/username_notification"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:textColor="@android:color/white"
            android:text="Accept Request"
            android:textSize="20dp"
            android:textAllCaps="false"
            android:background="#2196F3"
            android:visibility="gone"
            >

        </Button>
        <Button
            android:id="@+id/request_decline_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/request_accept_btn"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:textColor="@android:color/white"
            android:text="Cancel Request"
            android:textSize="20dp"
            android:textAllCaps="false"
            android:background="@android:color/holo_red_light"
            android:visibility="gone"
            >

        </Button>



    </RelativeLayout>

</androidx.cardview.widget.CardView>